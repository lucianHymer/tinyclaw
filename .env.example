# GitHub App ID for credential broker
GITHUB_APP_ID=

# Shared secret for credential broker authentication (generate with: openssl rand -hex 32)
BROKER_SECRET=

# Host path to workspace — must match cwd values in threads.json
WORKSPACE_ROOT=/path/to/your/workspace

# Optional: path to Claude CLI credentials file (defaults to ~/.claude/.credentials.json)
# CLAUDE_CREDENTIALS=/path/to/.claude/.credentials.json

# Public hostname or IP of this server — used in SSH config snippets for dev containers
# (NOT the Cloudflare tunnel URL — this is what devs SSH to directly)
PUBLIC_HOST=

# Optional: Cloudflare Tunnel token for HTTPS dashboard access
# TUNNEL_TOKEN=

# Host docker group GID — needed for docker-proxy socket access
# Find with: getent group docker | cut -d: -f3
DOCKER_GID=
