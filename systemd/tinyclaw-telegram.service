[Unit]
Description=TinyClaw Telegram Client
After=network.target

[Service]
Type=simple
User=__USER__
WorkingDirectory=__WORKING_DIR__
ExecStart=/usr/bin/node dist/telegram-client.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production

StandardOutput=journal
StandardError=journal
SyslogIdentifier=tinyclaw-telegram

[Install]
WantedBy=multi-user.target
